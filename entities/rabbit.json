{
  "minecraft:entity": {
    "version": 0.5,

    "component_groups": {
      "baby": {
        "minecraft:is_baby": {
        },
        "minecraft:scale": {
          "value":0.4
        },
        "minecraft:ageable": {
          "duration": 1200,
          "feedItems": [
            "golden_carrot",
            "carrot",
            "yellow_flower"
          ],
          "on_grow": {
            "event": "grow_up",
            "target": "self"
          }
        },
        "minecraft:behavior.follow_parent": {
          "priority": 6,
          "speed_modifier": 1.1
        }
      },

      "adult": {
        "minecraft:loot": {
          "table": "loot_tables/entities/rabbit.json"
        },
        "minecraft:scale": {
          "value": 0.6
        },
        "minecraft:behavior.breed": {
          "priority": 4,
          "speed_modifier": 1.0
        },
        "minecraft:breedable": {
          "breedItems": [
            "golden_carrot",
            "carrot",
            "yellow_flower"
          ],
          "breedsWith": {
            "mateType": "minecraft:rabbit",
            "babyType": "minecraft:rabbit",
            "breed_event": {
              "event": "minecraft:entity_born",
              "target": "baby"
            }
          },
          "requireTame": false
        }
      },

      "leashed": {
        "minecraft:behavior.move_towards_restriction": {
          "priority": 2,
          "speed_modifier": 1.0
        }
      },

      "coat_brown": {
        "minecraft:variant": { "value": 0 }
      },
      "coat_white": {
        "minecraft:variant": { "value": 1 }
      },
      "coat_black": {
        "minecraft:variant": { "value": 2 }
      },
      "coat_splotched": {
        "minecraft:variant": { "value": 3 }
      },
      "coat_desert": {
        "minecraft:variant": { "value": 4 }
      },  
      "coat_salt": {
        "minecraft:variant": { "value": 5 }
      }

    },

    "components": {
      "minecraft:identifier": {
        "id": "minecraft:rabbit"
      },

      "minecraft:type_family": {
        "family":["rabbit"]          
      },

      "minecraft:nameable": {
      },

      "minecraft:health": {
        "value": 3,
        "max": 3
      },
      "minecraft:collision_box": {
        "width": 0.67,
        "height": 0.67
      },
      "minecraft:movement": {
        "value": 0.3,
        "max": 0.3
      },
      "minecraft:leashable": {
        "soft_distance": 4.0,
        "hard_distance": 6.0,
        "max_distance":  10.0,
        "on_leash": {
          "event": "leash",
          "target": "self"
        },
        "on_unleash": {
          "event": "unleash",
          "target": "self"
        }
      },

      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.rabbit_panic" : {
        "priority": 1,
        "speed_modifier": 2.2
      },
      "minecraft:behavior.avoid_mob_type": {
        "priority": 4,
        "entity_types":[
          {
            "entity_filter": ["player"], 
            "max_dist": 8,
            "walk_speed_modifier": 2.2,
            "sprint_speed_modifier": 2.2
          },
          {
            "entity_filter": ["wolf"], 
            "max_dist": 4,
            "walk_speed_modifier": 2.2,
            "sprint_speed_modifier": 2.2
          },
          {
            "entity_filter": ["monster"], 
            "max_dist": 4,
            "walk_speed_modifier": 1.5,
            "sprint_speed_modifier": 1.5
          }
        ]
      },
      "minecraft:behavior.breed": {
        "priority": 2,
        "speed_modifier": 0.8
      },
      "minecraft:behavior.tempt": {
        "priority": 3,
        "speed_modifier": 1,
        "items": [
          "golden_carrot",
          "carrot",
          "yellow_flower"
        ]
      },
      "minecraft:behavior.raid_garden": {
        "priority": 5,
        "blocks": [
          "minecraft:carrot"
        ],
        "search_range": 16,
        "goal_radius": 0.8
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_modifier": 0.6,
        "xz_dist": 2,
        "y_dist": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 11
      }      
    },

    "events": {

      "in_desert": { "add": { "component_groups": [ "coat_desert" ] } },

      "in_snow": {
        "randomize": [
          { 
            "weight": 80,
            "add": { "component_groups": [ "coat_white" ] }
          },
          {
            "weight": 20,
            "add": { "component_groups": [ "coat_splotched" ] }
          }
        ]
      },

      "minecraft:entity_spawned": {
        "sequence": [
          {
            "randomize": [
              {
                "weight": 3,
                "add": { "component_groups": [ "adult" ] }
              },
              {
                "weight": 1,
                "add": { "component_groups": [ "baby" ] }
              }
            ]
          },
          {
            "filters": { "without_components": "minecraft:variant" },
            "randomize": [
              { 
                "weight": 50,
                "add": { "component_groups": [ "coat_brown" ] }
              },
              {
                "weight": 40,
                "add": { "component_groups": [ "coat_black" ] }
              },
              {
                "weight": 10,
                "add": { "component_groups": [ "coat_salt" ] }
              }
            ]
          }
        ]
      },

      "minecraft:entity_born": {
        "sequence": [
          { "add": { "component_groups": [ "baby" ] } },
          {
            "filters": { "without_components": "minecraft:variant" },
            "randomize": [
              { 
                "weight": 50,
                "add": { "component_groups": [ "coat_brown" ] }
              },
              {
                "weight": 40,
                "add": { "component_groups": [ "coat_black" ] }
              },
              {
                "weight": 10,
                "add": { "component_groups": [ "coat_salt" ] }
              }
            ]
          }
        ]
      },

      "grow_up": {
        "remove": { "component_groups": [ "baby" ] },
        "add": { "component_groups": [ "adult" ] }
      },

      "leash": {
        "add": { "component_groups": [ "leashed" ] }
      },

      "unleash": {
        "remove": { "component_groups": [ "leashed" ] }
      }
    }
  }
}
